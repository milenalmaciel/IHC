<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/editTextX"
        android:layout_width="109dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:hint="X"
        android:inputType="none" />

    <EditText
        android:id="@+id/editTextY"
        android:layout_width="109dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/editTextX"
        android:layout_marginStart="13dp"
        android:layout_marginTop="-46dp"
        android:layout_toEndOf="@+id/editTextX"
        android:hint="Y"
        android:inputType="none" />

    <EditText
        android:id="@+id/editTextZ"
        android:layout_width="109dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/editTextY"
        android:layout_marginStart="22dp"
        android:layout_marginTop="-46dp"
        android:layout_marginEnd="16dp"
        android:layout_toEndOf="@+id/editTextY"
        android:hint="Z"
        android:inputType="none" />

</RelativeLayout>